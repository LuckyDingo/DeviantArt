<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="art1"
            type="com.wind.model.Art" />
        <variable
            name="art2"
            type="com.wind.model.Art" />
        <variable
            name="art3"
            type="com.wind.model.Art" />
        <variable
            name="art4"
            type="com.wind.model.Art" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/topic_image_size"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgv"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:layout_marginEnd="1dp"
                app:imageUrl="@{art1.preview.src}"
                app:smallImageUrl="@{art1.thumbs.size > 0 ? art1.thumbs.get(0).src : null}"
                app:useBlur="@{true}"
                app:useFade="@{true}"
                tools:srcCompat="@tools:sample/backgrounds/scenic" />

            <ImageView
                android:id="@+id/imgv2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                app:imageUrl="@{art2.preview.src}"
                app:smallImageUrl="@{art2.thumbs.size > 0 ? art2.thumbs.get(0).src : null}"
                app:useBlur="@{true}"
                app:useFade="@{true}"
                tools:srcCompat="@tools:sample/backgrounds/scenic" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/topic_image_size"
            android:layout_marginTop="1dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgv3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:layout_marginEnd="1dp"
                app:imageUrl="@{art3.preview.src}"
                app:smallImageUrl="@{art3.thumbs.size > 0 ? art3.thumbs.get(0).src : null}"
                app:useBlur="@{true}"
                app:useFade="@{true}"
                tools:srcCompat="@tools:sample/backgrounds/scenic" />

            <ImageView
                android:id="@+id/imgv4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                app:imageUrl="@{art4.preview.src}"
                app:smallImageUrl="@{art4.thumbs.size > 0 ? art4.thumbs.get(0).src : null}"
                app:useBlur="@{true}"
                app:useFade="@{true}"
                tools:srcCompat="@tools:sample/backgrounds/scenic" />
        </LinearLayout>

    </LinearLayout>

</layout>
